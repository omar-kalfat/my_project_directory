{% extends 'admin-base.html.twig' %}

{% block title %}GiftCard index{% endblock %}

{% block body %}
    <h1>GiftCard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Amount</th>
                <th>Expirydate</th> 
                <th>merchantID</th>
                <th>actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for gift_card in gift_cards %}
            <tr>
                <td>{{ gift_card.id }}</td>
                <td>{{ gift_card.code }}</td>
                <td>{{ gift_card.amount }}</td>
                <td>{{ gift_card.expirydate ? gift_card.expirydate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{% if gift_card.merchant %}{{ (gift_card.merchant.name) }} {% endif %}</td>
                
                
                <td>
                    <a href="{{ path('app_gift_card_show', {'id': gift_card.id}) }}">show</a>
                    <a href="{{ path('app_gift_card_edit', {'id': gift_card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gift_card_new') }}">Create new</a>
{% endblock %}
