{% extends 'user/user-base.html.twig' %}



{% block title %}Panier{% endblock %}

{% block body %}
<h1>Votre Panier</h1>

{% if cart is empty %}
    <p>Votre panier est vide.</p>
{% else %}
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for item in cart %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.type }}</td>
                    <td>{{ item.prix }}€</td>
                    <td>
                        <a href="{{ path('app_remove_from_cart', {'index': loop.index0}) }}">Retirer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_checkout') }}" class="btn btn-success">Payer</a>
{% endif %}

<a href="{{ path('app_boutique') }}" class="btn btn-primary">Retour à la boutique</a>
{% endblock %}
